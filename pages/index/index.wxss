page{
  background-color: rgb(249, 249, 249);
}
/* 轮播图 */
.swiper{
  height: 300rpx;
  width: 100%;
}
swiper{
  height:300rpx;
}
.swiper image{
  width: 100%;
  height:300rpx;
}
/* 活动 */
.contanier{
  width: 100%;
  height: 240rpx;
  display: flex;
}
.content{
  height: 100%;
  width:200rpx;
  /* background-color: blue; */
  margin:0 0 0 40rpx ;
  padding: 10rpx 0;
}
.active{
 background-color:#95d9e9;
 width: 120rpx;
 height:120rpx;
 border-radius: 50%;
 margin: 40rpx 40rpx 0rpx;
}
.active.active_two{
  background-color:#abdfcf;
}
.active.active_three{
  background-color:#f2a7a4;
}
.active image{
  width: 60rpx;
  height:60rpx;
  margin: 30rpx;
}
.join{
  font-size:32rpx;
  text-align: center;
  line-height: 60rpx;
}
/* 参与活动 */
.detail{
  width:100%;
}
.join_in{
  display: flex;
  padding: 40rpx 40rpx 0 ;

}
.icons{
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
}
.icons image{
  width: 40rpx;
  height: 40rpx;
}
.icons image img{
  width: 8rpx;
  height: 40rpx;
}
.hd{
  font-size:36rpx;
  line-height: 20px;
  margin-left: 10rpx;

}
.more{
  font-size: 30rpx;
  color: #999;
  line-height: 20px;
  position: absolute;
  right:40rpx;
}
/* 详情 */
.detail_content{
  width: 80%;
  height:220rpx;
  background-color: yellowgreen;
  margin:40rpx auto;
  display: flex;
  padding: 40rpx;
  background-color: #fff;
  box-shadow:0 0 10px rgba(0, 0, 0, 0.1);
  border-radius:20rpx;
}
.item_img{
  width:30%;
  /* height:100%; */
}
.item_img image{
  width:100%;
  height: 100%;
} 
.item_img image img{
  width:100%;
  height:100%;
} 
text{
  display: block;
}
.item_right{
  width: 40%;
  height:100%;
  /* background-color: pink; */
  padding: 0rpx 0 0 20rpx;
}
.people{
  font-size: 36rpx;
  color: #333;
  font-weight:550;
  line-height:54rpx;

}
.time{
  font-size: 28rpx;
  color: #999;
  line-height:50rpx;
}
.item_more{
  font-size:24rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
  border:1px solid #B01B15;
  line-height: 30rpx;
  border-radius:26rpx;
  margin: 80rpx 0 0 24rpx;
  color: #B01B15;
}
